<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissões de Internet -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Permissões para o uso do estado da rede -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProspApp"
        tools:targetApi="31">

        <!-- Declara a MainActivity com intent-filter LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declara a HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- Declara a LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- Declara a AnaliseActivity -->
        <activity
            android:name="AnaliseActivity"
            android:exported="true" />

        <!-- Declara a AgendaActivity -->
        <activity
            android:name=".AgendaActivity"
            android:exported="true" />

        <activity
            android:name=".UserActivity"
            android:exported="true" />

        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
    </application>

</manifest>
